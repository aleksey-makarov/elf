    exposed-modules:   Data.Elf

test-suite tests
  type:                exitcode-stdio-1.0
  hs-source-dirs:      tests
  main-is:             Spec.hs
  other-modules:       Data.ElfSpec
  build-depends:       elf, base, bytestring, hspec >= 2.4 && < 3
                     , containers
